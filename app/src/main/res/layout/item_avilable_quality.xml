<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:paddingBottom="12dp"
    android:layout_height="match_parent">


    <LinearLayout
        style="@style/subShowTitle"
        android:layout_weight="5"
        android:layout_width="0dp"
        android:layout_height="match_parent">

        <TextView
            android:gravity="center"
            style="@style/subShowTitle"
            tools:text="test"
            android:id="@+id/id_quality_description_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/id_download_image"
        android:gravity="start"
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="match_parent">

        <ImageView
            android:src="@drawable/ic_file_download_gray_24dp"
            android:layout_width="20dp"
            android:layout_height="20dp"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/id_watch_image"
        android:gravity="start"
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="match_parent">

        <ImageView
            android:src="@drawable/ic_play_circle_outline_gray_24dp"
            android:layout_width="20dp"
            android:layout_height="20dp"/>

    </LinearLayout>

</LinearLayout>