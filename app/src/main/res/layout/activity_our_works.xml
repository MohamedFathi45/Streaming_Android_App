<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    style="@style/backGround"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="9"
        android:layout_width="match_parent"
        android:layout_height="0dp">

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/id_progress_bar_linear_layout_our_works"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>



    <LinearLayout
        android:gravity="center"
        android:visibility="gone"
        android:id="@+id/id_no_results_layout_our_works"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:src="@drawable/no_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>



    <LinearLayout
        android:layout_marginTop="15dp"
        android:visibility="gone"
        android:id="@+id/id_results_layout_our_works"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <GridView
            android:scrollbars="none"
            android:layout_marginTop="5dp"
            android:columnWidth="125dp"
            android:verticalSpacing="10dp"
            android:horizontalSpacing="10dp"
            android:id="@+id/id_our_works_grid"
            android:numColumns="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </GridView>


    </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:background="@color/BackGround"
        android:layout_weight="2"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <com.google.android.material.bottomnavigation.BottomNavigationView
            style="@style/backGround"
            app:itemBackground="@color/BackGround"
            app:itemTextColor="@drawable/selector"
            app:itemIconTint="@drawable/selector"
            android:id="@+id/id_bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            app:menu="@menu/bottom_navigation_bar"/>
    </LinearLayout>


</LinearLayout>
