<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.army_app">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_INTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/purple_army"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".CommentActivity"></activity>
        <activity android:name=".ServerActivity" />
        <activity android:name=".EpisodesActivity" />
        <activity android:name=".MainActivity" />
        <activity android:name=".HistoryActicity" />
        <activity android:name=".MyListActivity" />
        <activity android:name=".ProfileActivity" />
        <activity android:name=".SignInActivity" />
        <activity android:name=".More" />
        <activity android:name=".OurWorks" />
        <activity
            android:name=".Search"
            android:launchMode="singleTop" />
        <activity android:name=".ActorWorks" />
        <activity
            android:name=".SeriesDetailsActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".MoreShowsActivity" />
        <activity android:name=".ShowsCategoriesActivity" />
        <activity android:name=".MoreNonTypeShowsActivity" />
        <activity
            android:name=".MoviePlayerActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".MovieDetailsActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".ServerVersionValidationActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".utilities.DataBaseIntentService"
            android:exported="false" />
    </application>

</manifest>